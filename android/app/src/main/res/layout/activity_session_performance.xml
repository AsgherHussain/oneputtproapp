                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="Face Angle Impact"
                            android:textColor="@color/white" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:rotation="0"
                            android:src="@drawable/ic_arrow_up" />


                    </LinearLayout>

                    <!--  for graphLayout-->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="horizontal">
                    <LinearLayout
                        android:id="@+id/resultViewPuttingExpandableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_bg_accordion_header"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:background="@color/accordian_map_background_color"
                            android:padding="0dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/yAxisLabelFaceAngle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:rotation="-90"
                                android:text="Face Angle"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"/>

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/session_performance_graph_face_angle_impact"
                                android:layout_width="match_parent"
                                android:layout_height="118dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_toEndOf="@+id/yAxisLabelFaceAngle"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!--  Lie Angle Change layout  -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
