                                    android:id="@+id/puttingTempoArrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:rotation="0"
                                    android:src="@drawable/ic_arrow_up" />


                            </LinearLayout>

